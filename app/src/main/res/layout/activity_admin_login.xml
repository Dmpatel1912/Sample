<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Adminloginpage_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hgce"
    tools:context=".StartActivity">

    <ScrollView
        android:id="@+id/Adminloginpage_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/clgname_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/clglogo_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/hgce_logo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/hgce" />

                <TextView
                    android:id="@+id/clgname_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_toEndOf="@+id/hgce_logo"
                    android:background="@android:color/holo_blue_light"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="10sp"
                    android:selectAllOnFocus="false"
                    android:shadowColor="@color/colorAccent"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/colorAccent"
                    android:textSize="45sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:text="HASMUKH GOSWAMI COLLEGE OF ENGINEERING" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/admin_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                tools:background="@android:drawable/screen_background_light">

                <TextView
                    android:id="@+id/Atext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/arbutus_slab"
                    android:paddingBottom="50dp"
                    android:paddingTop="50dp"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/colorAccent"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:theme="@style/Base.TextAppearance.AppCompat.Display4"
                    tools:text="Admin Login :" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/loginbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/screen_background_dark_transparent"
                android:orientation="vertical"
                android:paddingBottom="200dp"
                android:paddingTop="200dp">

                <RelativeLayout
                    android:id="@+id/Alogin_page_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    tools:background="@android:color/holo_blue_dark">

                    <LinearLayout
                        android:id="@+id/Aloginbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@android:drawable/alert_dark_frame"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/Aemail_relative"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/Aemail_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/admin_eid"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginStart="50dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@android:drawable/editbox_background_normal"
                                    android:text="Email ID :"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                    android:textColor="@android:color/black"
                                    android:textStyle="bold"
                                    android:typeface="sans" />

                                <EditText
                                    android:id="@+id/Aemail_txt"
                                    style="@style/Base.TextAppearance.AppCompat.Display1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginStart="80dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1"
                                    android:background="@android:drawable/editbox_background"
                                    android:hint="example@gmail.com"
                                    android:inputType="textEmailAddress" />

                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/Apassword_relative"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/Apassword_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/Aemail_layout"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                tools:ignore="NotSibling">

                                <TextView
                                    android:id="@+id/Apassword_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="50dp"
                                    android:background="@android:drawable/editbox_background_normal"
                                    android:text="Password :"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                    android:textColor="@android:color/black"
                                    android:textStyle="bold"
                                    android:typeface="sans" />

                                <EditText
                                    android:id="@+id/Apassword_txt"
                                    style="@style/Base.TextAppearance.AppCompat.Display1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginStart="50dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1"
                                    android:background="@android:drawable/editbox_background"
                                    android:hint="@string/alphabatic_and_numeric"
                                    android:inputType="textPassword" />


                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/forgot_relative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/forgot_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:orientation="horizontal"
                                android:padding="20dp">

                                <Button
                                    android:id="@+id/discrip_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:text="Forget password ?"
                                    android:textAlignment="center"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                    android:textColor="@android:color/holo_red_dark"
                                    android:textStyle="bold"
                                    android:typeface="sans" />
                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/btn_relative"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:background="@android:color/holo_blue_dark">

                            <LinearLayout
                                android:id="@+id/btns_layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/Admin_login_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Login"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold"
                                    android:typeface="sans" />


                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>